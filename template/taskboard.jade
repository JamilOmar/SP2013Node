div.page
    div.page-region
        #taskboard.page-region-content
            div.row.task-group high
            #highPriority.row.priority.high(data-bind="ui:{type:'droppable',options:{hoverClass:'hover',tolerance:'intersect',drop:changePriority}}")
                div.span10(data-bind="foreach:highPriorityTasks")
                    div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true, drag:$root.onDragTask, helper:'clone', containment:'taskboard'}},value:$data, style:{left:$root.progressToPosition(progress)}")
                        div.tile-content(data-bind="css:cssClass " )
                            h2(data-bind="text: owner")
                            h4(data-bind="text: title")
                            p(data-bind="text:description")
                            h5(data-bind="text:formattedDueOn")
            div.row.task-group normal
            #normalPriority.row.priority.normal(data-bind="ui:{type:'droppable',options:{hoverClass:'hover',tolerance:'intersect',drop:changePriority}}")
                div.span10(data-bind="foreach:normalPriorityTasks")
                    div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true, drag:$root.onDragTask, helper:'clone', containment:'taskboard'}},value:$data, style:{left:$root.progressToPosition(progress)}")
                        div.tile-content(data-bind="css:cssClass " )
                            h2(data-bind="text: owner")
                            h4(data-bind="text: title")
                            p(data-bind="text:description")
                            h5(data-bind="text:formattedDueOn")
            div.row.task-group low
            #lowPriority.row.priority.low(data-bind="ui:{type:'droppable',options:{hoverClass:'hover',tolerance:'intersect',drop:changePriority}}")
                div.span10(data-bind="foreach:lowPriorityTasks")
                    div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true, drag:$root.onDragTask, helper:'clone', containment:'taskboard'}},value:$data, style:{left:$root.progressToPosition(progress)}")
                        div.tile-content(data-bind="css:cssClass" )
                            h2(data-bind="text: owner")
                            h4(data-bind="text: title")
                            p(data-bind="text:description")
                            h5(data-bind="text:formattedDueOn")

