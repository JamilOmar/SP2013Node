div.page
    div.page-region
        div.page-region-content	
            div.row.task-group low
            div.row.priority.low(data-bind="ui:{type:'droppable',options:{hoverClass:'hover',tolerance:'intersect',drop:changePriority}}")
                div.span10(data-bind="foreach:lowPriorityTasks")
                    div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true},click:function(){$root.activeComponent($data);event.stopPropagation ? event.stopPropagation() : (event.cancelBubble=true);}},value:$data")
                        div.tile-content(data-bind="css:cssClass" )
                            h2(data-bind="text: owner")
                            h4(data-bind="text: title")
                            p(data-bind="text:description")
                            h5(data-bind="text:formattedDueOn")
            div.row.task-group normal
            div.row.priority.normal(data-bind="ui:{type:'droppable',options:{hoverClass:'hover'}}")
                div.span10(data-bind="foreach:normalPriorityTasks")
                    div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true},click:function(){$root.activeComponent($data);event.stopPropagation ? event.stopPropagation() : (event.cancelBubble=true);}},value:$data")
                        div.tile-content(data-bind="css:cssClass " )
                            h2(data-bind="text: owner")
                            h4(data-bind="text: title")
                            p(data-bind="text:description")
                            h5(data-bind="text:formattedDueOn")
            div.row.task-group high
            div.row.priority.high(data-bind="ui:{type:'droppable',options:{hoverClass:'hover'}}")
                div.span10(data-bind="foreach:highPriorityTasks")
