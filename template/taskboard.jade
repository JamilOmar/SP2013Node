div.page
    div.page-region
        div.page-region-content
            div.row
                div.rotate low
                div.priority.low(data-bind="ui:{type:'droppable',options:{hoverClass:'hover',tolerance:'intersect'}}")
                    div.span10(data-bind="foreach:lowPriorityTasks")
                        div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true},click:function(){$root.activeComponent($data);event.stopPropagation ? event.stopPropagation() : (event.cancelBubble=true);}}")
                            div.tile-content(data-bind="css:cssClass" )
                                h2(data-bind="text: owner")
                                h4(data-bind="text: title")
                                p(data-bind="text:description")
                                h5(data-bind="text:formattedDueOn")
                div.rotate normal
                div.priority.normal(data-bind="ui:{type:'droppable',options:{hoverClass:'hover'}}")
                    div.span10(data-bind="foreach:normalPriorityTasks")
                        div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true},click:function(){$root.activeComponent($data);event.stopPropagation ? event.stopPropagation() : (event.cancelBubble=true);}}")
                            div.tile-content(data-bind="css:cssClass " )
                                h2(data-bind="text: owner")
                                h4(data-bind="text: title")
                                p(data-bind="text:description")
                                h5(data-bind="text:formattedDueOn")
                div.rotate high
                div.priority.high(data-bind="ui:{type:'droppable',options:{hoverClass:'hover'}}")
                    div.span10(data-bind="foreach:highPriorityTasks")
                        div.tile(data-bind="ui:{type:'draggable',options:{refreshPositions:true},click:function(){$root.activeComponent($data);event.stopPropagation ? event.stopPropagation() : (event.cancelBubble=true);}}")
                            div.tile-content(data-bind="css:cssClass " )
                                h2(data-bind="text: owner")
                                h4(data-bind="text: title")
                                p(data-bind="text:description")
                                h5(data-bind="text:formattedDueOn")